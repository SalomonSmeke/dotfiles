#!/bin/zsh
# add local exclude patterns to repo
# args: <repo> <pattern> ...
emulate -L zsh; setopt $_znap_opts

private repo=~znap/$1
[[ $1 == */* ]] &&
    repo=~[$1]
shift

private -aU lines=()
private file=
for file in $repo/${GIT_DIR:-.git}/**/info/exclude(.); do
  [[ -r $file ]] &&
      lines=( ${(f)"$(< $file)"} )
  lines+=( $@ )
  print -r "${(F)lines}" >! $file 2>/dev/null
done
